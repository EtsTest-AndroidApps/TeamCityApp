<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseItem">

    <FrameLayout
        style="@style/Item.Clickable">

        <FrameLayout
            android:id="@+id/hightlited_zone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            style="@style/BaseItemsContainer">

            <FrameLayout
                android:id="@+id/icon_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include layout="@layout/layout_item_icon" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/cred_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_item_title" />

                <TextView
                    tools:text="@string/default_description_value"
                    style="@style/ItemSubTitle" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/layout_divider"/>

    </FrameLayout>

</FrameLayout>